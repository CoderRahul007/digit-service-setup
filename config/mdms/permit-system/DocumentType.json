{
  "tenantId": "pg.citya",
  "moduleName": "permit-system",
  "DocumentType": [
    {
      "code": "IDENTITY_PROOF",
      "name": "Identity Proof",
      "localName": "पहचान प्रमाण",
      "description": "Government issued identity document for verification",
      "acceptedFormats": ["PDF", "JPG", "JPEG", "PNG"],
      "maxSizeKB": 2048,
      "required": true,
      "category": "PERSONAL_DOCUMENT",
      "validDocuments": [
        {
          "name": "Aadhaar Card",
          "code": "AADHAAR",
          "pattern": "^[0-9]{4}\\s[0-9]{4}\\s[0-9]{4}$",
          "maskingRequired": true
        },
        {
          "name": "Voter ID Card", 
          "code": "VOTER_ID",
          "pattern": "^[A-Z]{3}[0-9]{7}$",
          "maskingRequired": false
        },
        {
          "name": "Passport",
          "code": "PASSPORT", 
          "pattern": "^[A-Z][0-9]{7}$",
          "maskingRequired": true
        },
        {
          "name": "Driving License",
          "code": "DRIVING_LICENSE",
          "pattern": "^[A-Z]{2}[0-9]{2}[0-9]{4}[0-9]{7}$",
          "maskingRequired": false
        },
        {
          "name": "PAN Card",
          "code": "PAN",
          "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
          "maskingRequired": true
        }
      ],
      "validationRules": {
        "ocrRequired": false,
        "faceMatchRequired": false,
        "digitalVerificationSupported": true
      }
    },
    {
      "code": "ADDRESS_PROOF",
