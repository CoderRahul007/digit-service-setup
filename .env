# DIGIT OSS Local Development Environment Configuration

# System Configuration
COMPOSE_PROJECT_NAME=digit-oss
DOCKER_REGISTRY=egovio
DIGIT_VERSION=health-campaign-v1.1.6
PROJECT_DIR=E:/DIGIT/digit-permit-system

# Database Configuration
DB_HOST=postgres
DB_NAME=egov
DB_USER=postgres
DB_PORT=5432
DB_PASSWORD=postgres

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=egov
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_MULTIPLE_DATABASES=egov_ms,devops,ukd

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Kafka Configuration
KAFKA_BROKER_HOST=kafka:9092
KAFKA_ZOOKEEPER=zookeeper:2181

# Elasticsearch Configuration
ES_HOST=elasticsearch
ES_PORT=9200
ES_CLUSTER_NAME=digit-es

# Gateway Configuration
GATEWAY_PORT=8080

# External Service URLs (Mock for local development)
SMS_PROVIDER_URL=https://mock-sms-service.com/api/v1/send
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Security Configuration
JWT_SECRET=your-local-jwt-secret-key-change-in-production
ENCRYPTION_KEY=local-encryption-key-32-chars-12

# Application URLs (for local development)
EGOV_HOST=http://localhost:8080

# File Storage Configuration
FILE_STORAGE_TYPE=DISK
FILE_STORAGE_MOUNT_PATH=/opt/eGov/filestore

# Service Health Check Configuration
HEALTH_CHECK_TIMEOUT=30s
HEALTH_CHECK_INTERVAL=60s
HEALTH_CHECK_RETRIES=3

# Development Configuration
LOG_LEVEL=DEBUG
ENABLE_DEBUG=true
ENABLE_SWAGGER=true

# Permit System Configuration
DEFAULT_TENANT_ID=pg.citya

# Verifiable Credentials Configuration
DID_METHOD=did:key
QR_BASE_URL=http://localhost:8080/vc/verify

# Mock Services (for local development without external dependencies)
EGOV_SMS_MOCK_ENABLED=true
EGOV_EMAIL_MOCK_ENABLED=true

NETWORK_NAME=digit-network

DIGIT_LOCAL_DIR_SERVICES=E:/DIGIT/digit-permit-system/DIGIT-OSS/core-services

